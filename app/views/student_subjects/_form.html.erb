<%= form_for @student_subject, :html => { :class => "form-horizontal student_subject" } do |f| %>

  <% if @student_subject.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@student_subject.errors.count, "error") %> prohibited this student_subject from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @student_subject.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :student_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :student_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:student_id) %>
  </div>
  <div class="form-group">
    <%= f.label :subject_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :subject_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:subject_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                student_subjects_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
